pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo "Pulling code from GitHub..."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t trivy-demo:1.0 .'
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
    }
}
